<div style="background: var(--color-dark-blue); padding: 60px 0;">
    <div class="container">
        <h2 style="text-align: center; font-size: 2rem; margin-bottom: 40px; color: var(--color-light-purple);">Client Testimonials</h2>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px;">
            {% for testimonial in testimonials %}
                <div style="background: var(--color-black); padding: 30px; border-radius: 10px; border-left: 4px solid var(--color-purple); position: relative;">
                    <div style="position: absolute; top: -20px; left: 30px; width: 40px; height: 40px; background: var(--color-purple); border-radius: 50%; display: flex; justify-content: center; align-items: center;">
                        <i class="fas fa-quote-left" style="color: white;"></i>
                    </div>
                    <p style="font-style: italic; margin-bottom: 20px;">"{{ testimonial.content }}"</p>
                    <div style="display: flex; align-items: center;">
                        <div style="width: 50px; height: 50px; border-radius: 50%; background: var(--color-gray); margin-right: 15px; overflow: hidden;">
                            {% if testimonial.avatar %}
                                <img src="{{ testimonial.avatar }}" alt="{{ testimonial.name }}" style="width: 100%; height: 100%; object-fit: cover;">
                            {% else %}
                                <i class="fas fa-user" style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; font-size: 1.5rem;"></i>
                            {% endif %}
                        </div>
                        <div>
                            <p style="font-weight: bold; margin: 0;">{{ testimonial.name }}</p>
                            <p style="margin: 0; font-size: 0.9rem; color: var(--color-light-purple);">{{ testimonial.position }}, {{ testimonial.company }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
