<div style="padding: 60px 0; background: var(--color-black);">
    <div class="container">
        <h2 class="section-title">Featured Projects</h2>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 30px;">
            {% for project in projects %}
                <div style="background: var(--color-dark-blue); border-radius: 10px; overflow: hidden; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);">
                    <div style="height: 200px; background: var(--color-gray); position: relative; overflow: hidden;">
                        {% if project.image %}
                            <img src="{{ project.image }}" alt="{{ project.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                        {% else %}
                            <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center; background: linear-gradient(135deg, var(--color-purple), var(--color-dark-blue));">
                                <i class="fas fa-code" style="font-size: 4rem; color: white;"></i>
                            </div>
                        {% endif %}
                        <div style="position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(transparent, rgba(0, 0, 0, 0.8)); padding: 20px;">
                            <h3 style="margin: 0; font-size: 1.5rem;">{{ project.title }}</h3>
                        </div>
                    </div>
                    <div style="padding: 20px;">
                        <p style="margin-bottom: 15px;">{{ project.description }}</p>
                        <div style="margin-bottom: 15px;">
                            {% for tech in project.technologies %}
                                <span style="display: inline-block; background: var(--color-black); padding: 5px 10px; border-radius: 20px; font-size: 0.8rem; margin-right: 8px; margin-bottom: 8px;">{{ tech }}</span>
                            {% endfor %}
                        </div>
                        <div style="display: flex; gap: 10px;">
                            {% if project.demo_url %}
                                <a href="{{ project.demo_url }}" class="btn" style="padding: 8px 15px; font-size: 0.9rem;">Live Demo</a>
                            {% endif %}
                            {% if project.code_url %}
                                <a href="{{ project.code_url }}" style="display: inline-block; padding: 8px 15px; background: transparent; border: 1px solid var(--color-purple); border-radius: 5px; font-size: 0.9rem; transition: all 0.3s;">
                                    View Code
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div style="text-align: center; margin-top: 40px;">
            <a href="#" class="btn">View All Projects</a>
        </div>
    </div>
</div>
